{
  "name": "wujie-demo",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @apps/* --workspace-concurrenc 5 dev",
    "build": "pnpm --filter @apps/* build && pnpm combine",
    "combine": "combine-dist",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "commit": "git add . && git cz"
  },
  "engines": {
    "pnpm": ">=9.0.0",
    "node": ">=20.0.0"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-custom"
    },
    "cz-custom": {
      "config": "./.cz-config.json"
    }
  },
  "lint-staged": {
    "apps/**/src/**/*.{js,ts,vue,jsx,tsx}": [
      "pnpm -F '@apps/*' format",
      "pnpm -F '@apps/*' lint"
    ],
    "packages/**/*.{js,ts,vue,jsx,tsx}": [
      "pnpm -F '@packages/*' format",
      "pnpm -F '@packages/*' lint"
    ],
    "tools/src/**/*.{js,ts,vue,jsx,tsx}": [
      "pnpm -F 'tools' format",
      "pnpm -F 'tools' lint"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@scripts/combine-dist": "workspace:^",
    "commitlint": "^20.2.0",
    "cz-custom": "^0.0.2",
    "esbuild": "^0.25.8",
    "esbuild-plugin-d.ts": "^1.3.1",
    "esbuild-plugin-polyfill-node": "^0.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  }
}