{
  "name": "wujie-demo",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm --filter @apps/* --workspace-concurrenc 5 dev",
    "build": "pnpm --filter @apps/* build && pnpm combine",
    "combine": "combine-dist",
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm",
    "commit": "git add . && git cz"
  },
  "engines": {
    "pnpm": ">=9.0.0",
    "node": ">=20.0.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-custom"
    },
    "cz-custom": {
      "config": "./.cz-config.json"
    }
  },
  "lint-staged": {
    "apps/**/src/**/*.{js,ts,vue,jsx,tsx}": [
      "pnpm -F '@apps/*' format",
      "pnpm -F '@apps/*' lint"
    ],
    "tools/libs/**/*.{js,ts,vue,jsx,tsx}": [
      "pnpm -F 'tools' format",
      "pnpm -F 'tools' lint"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "commitlint": "^20.2.0",
    "cz-custom": "^0.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript-eslint": "^8.48.1",
    "@scripts/combine-dist": "workspace:^"
  }
}